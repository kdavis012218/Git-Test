using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Pig_Latin_Translator
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Hoc Pig Latin dicta Translations");
            bool run = true;
            while (run == true)
            {
                Console.WriteLine(" Please input a word");


                string input = Console.ReadLine();
                input = input.ToLower();
                Console.WriteLine(input);
                char[] vowels = { 'a', 'e', 'i', 'o', 'u' }; //array for vowel check
                char[] inputArray = input.ToArray(); //transfer input into array
                char c = input[0]; //isolates first letter of input for vowel check
                Boolean nonAlpha = true;
                foreach (var letter in input)

                {

                    if (Char.IsDigit(letter) || Char.IsPunctuation(letter) || Char.IsSymbol(letter))
                    {
                        //number and special character filters
                        nonAlpha = false;
                        break;
                    }
                }
                if (nonAlpha && vowels.Contains(c)) //can continue with special characters if first is vowel

                {
                    Console.WriteLine($"Translation: {input}way.");//adds "way" to end 

                }
                else if (nonAlpha && !vowels.Contains(c)) //if first letter is not vowel
                {
                    string sub = input.Substring(1);
                    Console.WriteLine($"Translation: {sub}{c}ay");
                }
                else if (!nonAlpha) //if input does not meet requirements
                {
                    Console.WriteLine($"Translation: {input}");
                }
                run = Continue();
            }
        }
        public static Boolean Continue()//true/false to determine if program continues
        {
            Boolean run;
            Console.WriteLine("Try another word? (y/n): ");
            string answer = Console.ReadLine();
            if (answer == "y" || answer == "Y")
            {
                run = true;
            }
            else if (answer == "n" || answer == "N")
            {
                run = false;
            }
            else
            {
                Console.WriteLine("Invalid Input, re-enter please.");//in case of incorrect input
                run = Continue();
            }
            return run;
        }
    }
}





           

